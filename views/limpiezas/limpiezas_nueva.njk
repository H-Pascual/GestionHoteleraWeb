{% extends "base.njk" %}
{% block titulo %}Limpiezas | Nueva Limpieza{% endblock %}
{% block contenido %}
    <h1>Inserción de Limpieza de habitación {{idHabitacion}}</h1>

    {% if errores.general %}
        <p class="alert alert-danger">{{ errores.general }}</p>
    {% endif %}

    <form action="/limpiezas" method="post">
    <input type="hidden" name="idHabitacion" value="{{ idHabitacion }}">
        <div class="form-group">
            <label for="fechaHora">Fecha de limpieza:</label>
            <input type="date" name="fechaHora" required>
        </div>
        <div class="form-group">
            <label for="observaciones">Observaciones:</label>
            <textarea name="observaciones" class="form-control" rows="10" cols="50"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Enviar</button>
    </form>
{% endblock %}