{% extends "base.njk" %}
{% block titulo %}Habitaciones | Nueva Habitación{% endblock %}
{% block contenido %}
    <h1>Inserción de Habitaciones</h1>

    {% if errores.general %}
        <p class="alert alert-danger">{{ errores.general }}</p>
    {% endif %}

    <form action="/habitaciones" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label for="numero">Número de habitación:</label>
            {% if errores.numero %}
                <p class="text-danger">{{ errores.numero }}</p>
            {% endif %}
            <input required type="number" class="form-control" name="numero" value="{{datos.numero}}" min="1" max="100" placeholder="Número de habitación... ">
        </div>
        <div class="form-group">
            <label for="tipo">Tipo de habitación:</label>
            <select name="tipo" id="tipo">
                <option value="individual" selected>Individual</option>
                <option value="doble">Doble</option>
                <option value="familiar">Familiar</option>
                <option value="suite">Suite</option>
            </select>
        </div>
        <div class="form-group">
            <label for="precio">Precio:</label>
            {% if errores.precio %}
                <p class="text-danger">{{ errores.precio }}</p>
            {% endif %}
            <input required type="number" value="{{datos.precio}}" class="form-control" placeholder="Precio de la habitación..." name="precio" min="0" max="250">
        </div>
        <div class="form-group">
            <label for="descripcion">Descripción:</label>
            {% if errores.descripcion %}
                <p class="text-danger">{{ errores.descripcion }}</p>
            {% endif %}
            <textarea required name="descripcion" class="form-control" rows="10" cols="50">{{datos.descripcion}}</textarea>
        </div>
        <div class="form-group">
            <label for="imagen">Imagen:</label>
            <input type="file" class="form-control" name="imagen" />
        </div>
        <button type="submit" class="btn btn-primary">Enviar</button>
    </form>

{% endblock %}